            <intent-filter>
                <action android:name="com.0058.action.jelly.LIVING_ROOM" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!--直播界面-->
        <activity
            android:name="com.oo58.jelly.activity.LivingActivity"
