            <intent-filter>
                <action android:name="com.0058.action.jelly.LOGIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!--主界面-->
        <activity
            android:name="com.oo58.jelly.activity.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="com.0058.action.jelly.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!--注册界面-->
        <activity
            android:name="com.oo58.jelly.activity.RegAcvtivity"
