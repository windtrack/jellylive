<?xml version="1.0" encoding="utf-8"?>
<com.oo58.jelly.view.refreshview.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:id="@+id/hotrefreshview"
    >
    <include layout="@layout/refresh_head" />
    <com.oo58.jelly.view.refreshview.pulllableview.PullableListView
        android:id="@+id/hot_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:divider="@color/gray"
        android:dividerHeight="1dp"
        >

    </com.oo58.jelly.view.refreshview.pulllableview.PullableListView>
    <include layout="@layout/load_more" />
</com.oo58.jelly.view.refreshview.PullToRefreshLayout>