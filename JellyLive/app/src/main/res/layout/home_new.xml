<?xml version="1.0" encoding="utf-8"?>
<com.oo58.jelly.view.refreshview.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newanchorlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/refresh_head" />

    <com.oo58.jelly.view.refreshview.pulllableview.PullableGridView
        android:id="@+id/new_anchor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:verticalSpacing="10dp" />

    <include layout="@layout/load_more" />
</com.oo58.jelly.view.refreshview.PullToRefreshLayout>